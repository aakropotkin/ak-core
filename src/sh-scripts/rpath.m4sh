AS_INIT
m4_include([elf.m4])
m4_include([util.m4])

# `-S' argument splits path output onto lines.
AS_VAR_IF([1],
          [-S],
          [AS_VAR_SET([SPLIT], [true])
           shift],
          [AS_VAR_SET([SPLIT], [false])])

m4_define([GET_RPATH], [ELF_GET_ENTRY([${1}], [R\(UN\)\?PATH])])

AS_VAR_IF([SPLIT],
          [true],
          [GET_RPATH|UTIL_TR_PATH_LINES],
          [GET_RPATH])
